@page
@model PreviewModel


<div class="main">


    <div class="row">
      <div class="col-sm-2 col-md-3"></div>
      <div class="col-sm-8 col-md-6 align-center">@Html.Partial("_PreMsg", Model.bridgegreetings)</div>
      <div class="col-sm-2 col-md-3"></div>
    </div>

    <div class="row ">
      <div class="col-sm-2 col-md-3"></div>
