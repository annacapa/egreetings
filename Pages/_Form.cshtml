@model IndexModel


    <!--  Row  -->
    <div class="row">
    <!--  Column Width  -->
    <div class="col-xs-12 col-sm-8 col-md-6">
            
        <!--Card-->
        <div class="card">
            <!--Card image-->
            <div >
                <img src="images/thomas-shellberg-31280.jpg" class="img-fluid" alt="">
            </div>
            <!--/.Card image-->
            <!--Card content-->
            <div class="card-body">

                <!--Title-->
                <h4 class="card-title">Haunted House!</h4>
                

                <form>
                    <div class="form-group">
                        
                        <label asp-for="bridgegreetings.title"></label>
                        <textarea asp-for="bridgegreetings.title" class="form-control"></textarea>
                        <div asp-validation-for="bridgegreetings.title" class="text-danger"></div>
                        
                        <textarea asp-for="bridgegreetings.message" class="form-control" maxlength="100"></textarea>
                        <div asp-validation-for="bridgegreetings.message" class="text-danger"></div>
                        <span class="countdown"></span>
                    </div>
                </form>

            </div>
            <!--/Card content-->
        </div>
        <!--/Card-->

    </div>
    <!--  /Column Width  -->

        <div class="col-xs-12 col-sm-4 col-md-4 col-md-offset-1">
            
            <div class="form-header">
                <h4>Now for the easy part.</h4>
                <p>Address your card by filling out this form:</p>
            </div>
                
                <form>
                    <div class="form-group">
                        <label asp-for="bridgegreetings.sendTo"></label>
                
                        <label asp-for="bridgegreetings.toFirstName" class="sr-only"></label>
                        <input type="text" asp-for="bridgegreetings.toFirstName" class="form-control" maxlength="30">
                        <div asp-validation-for="bridgegreetings.toFirstName" class="text-danger"></div> 
                    </div>
                    <div class="form-group">
                        <label asp-for="bridgegreetings.toLastName" class="sr-only"></label>
                        <input type="text" asp-for="bridgegreetings.toLastName" class="form-control" maxlength="30">
                        <div asp-validation-for="bridgegreetings.toLastName" class="text-danger"></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="bridgegreetings.toEmail" class="sr-only">Email</label>
                        <input type="text" asp-for="bridgegreetings.toEmail" class="form-control" placeholder="Email" maxlength="100">
                        <div asp-validation-for="bridgegreetings.toEmail" class="text-danger"></div>
                    </div>

                    <div class="form-group">
                        <label asp-for="bridgegreetings.sentFrom"></label>
                        <input type="text" asp-for="bridgegreetings.fromFirstName" class="form-control"  placeholder="First Name" maxlength="30">
                        <div asp-validation-for="bridgegreetings.fromFirstName" class="text-danger"></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="bridgegreetings.fromLastName" class="sr-only">Last Name</label>
                        <input type="text" asp-for="bridgegreetings.fromLastName" class="form-control input-clear" placeholder="Last Name" maxlength="30">
                        <div asp-validation-for="bridgegreetings.fromLastName" class="text-danger"></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="bridgegreetings.fromEmail" class="sr-only">Email</label>
                        <input type="text" asp-for="bridgegreetings.fromEmail" class="form-control input-clear" placeholder="Email" maxlength="100">
                        <div asp-validation-for="bridgegreetings.fromEmail" class="text-danger"></div>
                    </div>

                    <div class="checkbox">
                        <label><input type="checkbox" asp-for="bridgegreetings.agree" value="">I agree to the terms and conditions.</label>
				        <div asp-validation-for="bridgegreetings.agree" class="text-danger"></div>
                    </div>

                    <button class="btn btn-primary" type="submit">Next</button>
                </form>

        </div>
        <!--/Right Half-->
            

    </div>
    <!--  /Row  -->